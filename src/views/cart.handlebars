<div class="cartContainer">
    <div class="subCartContainer">
        <div class="detailsCartContainer">
            <div class="cartDetails">
            {{#each products}}
                <div class="itemCart">
                    <div class="imgCart">
                        <img src="{{this.product.thumbnail}}"/>
                    </div>
                    <div class="textDetails">
                        <table>
                            <tr>
                                <td class="title">{{this.product.title}}</td>
                                <td class="volume">{{this.product.volume}}</td>
                                <td class="generalDetails">Precio: {{this.product.price}}</td>
                                <td class="generalDetails">Cantidad: {{this.qty}}</td>
                                <td class="generalDetails">Total: {{this.product.price}}</td>
                                <td id="tdImage"><img data-id="{{this._id}}" class="trashIcon" src="https://i.imgur.com/FM4la5Q.png" alt="trash icon" title="Borrar producto"></td>
                            </tr>
                        </table>
                    </div>
                </div>
            {{/each}}
            </div>
            <div class="cartResume">
                <div class="purchaseDetail">
                    <div class="resumeContainer">
                        <h2 class="titleDetail">Detalles de tu compra</h2>
                        <div class="specifications">
                            <p class="generalDetails">Total de productos:</p>
                            <p class="generalDetails">1</p>
                        </div>
                        <div class="specifications">
                            <p class="generalDetails">Valor total:</p>
                            <p class="generalDetails">$20.98</p>
                        </div>
                    </div>
                    <div class="buttonContainer">
                        <button class="finishPurchaseButton"><a class="comunicationAnchor" href="">Finalizar compra</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

